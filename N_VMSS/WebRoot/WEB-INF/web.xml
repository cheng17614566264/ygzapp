	<!-- 配置会话超时的时间 -->
	<session-config>
		<session-timeout>60</session-timeout>
	</session-config>
	<!-- 默认欢迎页面，如果只输入应用名，不输入文件，应用会按照这里面提供的顺序查找 -->
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

</web-app>
